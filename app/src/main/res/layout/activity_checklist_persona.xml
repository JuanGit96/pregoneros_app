                        android:textColor="@android:color/background_light" />

                    <Button
                        android:layout_marginTop="5dp"
                        android:id="@+id/audioDefault"
                        android:layout_width="157dp"
                        android:layout_height="123dp"
                        android:onClick="actionAudio1"
                        android:background="@drawable/mute" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/multimediaImagen"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    >

                    <Button
                        android:id="@+id/addImage"
                        android:onClick="uploadImageDefault"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:text="Imagen"
                        android:textColor="@android:color/background_light" />

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:id="@+id/imageDefault"
                        android:layout_width="157dp"
                        android:layout_height="123dp"
                        android:src="@drawable/imagen_no_disponible" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/multimediaVideo">

                    <Button
