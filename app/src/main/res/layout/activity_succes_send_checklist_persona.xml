<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SuccesSendChecklistPersona"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:layout_marginTop="20dp">




    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu Pregón ha sido enviado:"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp" />





    <TextView
        android:id="@+id/reboundcode_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="CODIGO DE REFERIDO:"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/reboundcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text=""
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:textIsSelectable="true"
        />

    <TextView
        android:id="@+id/txt_roboundCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="msg"
        android:layout_gravity="center"
        android:textStyle="italic"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/discountcode_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:textAlignment="center"
        android:text="CODIGO DE DESCUENTO:"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/discountcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text=""
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/colorPrimary"
        android:textIsSelectable="true"
        />

    <TextView
        android:id="@+id/xd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="Con este código tus pregoneados podrán redimir el beneficio del pregón (Si
aplica)"
        android:layout_gravity="center"
        android:textStyle="italic"
        android:textSize="17sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="Todos los código se redimen en la sección “Redime tu código”"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/goToPregon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Volver a PREGÓN"
        android:onClick="goToPregon"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="40dp"/>

